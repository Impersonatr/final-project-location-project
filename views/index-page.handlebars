{{> header}}

<main>
	{{#each Home}}
		<div class="Home">
			<p><a target="_blank" href="http://maps.google.com/maps?q={{latitude}},{{longitude}}">Home</a></p>
			<p>
				Latitude: {{latitude}}
			</p>
			<p>
				Longitude: {{longitude}}
			</p>
			<div class="edit-home-container">
				<button type="button" id="edit-home-button">Edit</button>
			</div>
		</div>
	{{/each}}
	{{#each Locations}}
		<div class="place-container">
			<div class="delete-container">
				<button class="delete-place-button">x</button>
			</div>
			<p id="location">
				Location: <a target="_blank" href="http://maps.google.com/maps?q={{latitude}},{{longitude}}">{{location}}</a>
			</p>
			<p id="latitude">
				Latitude: {{latitude}}
			</p>
			<p id="longitude">
				Longitude: {{longitude}}
			</p>
			<p id="description">
				Description: {{description}}
			</p>
			<p id="distance">
				Distance: {{distance}}
			</p>
		</div>
	{{/each}}
</main>

{{> add-place-modal}}
{{> change-home-modal}}
