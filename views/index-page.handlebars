{{> header}}

<main>
	{{#each Home}}
		<div class="Home">
			<p><a target="_blank" href="http://maps.google.com/maps?q={{latitude}},{{longitude}}">Home</a></p>
			<p>
				Latitude: {{latitude}}
			</p>
			<p>
				Longitude: {{longitude}}
			</p>
		</div>
	{{/each}}
	{{#each Locations}}
		<div class="place-container">
			<p>
				Location: <a target="_blank" href="http://maps.google.com/maps?q={{latitude}},{{longitude}}">{{location}}</a>
			</p>
			<p>
				Latitude: {{latitude}}
			</p>
			<p>
				Longitude: {{longitude}}
			</p>
			<p>
				Description: {{description}}
			</p>
			<p>
				Distance: {{distance}}
			</p>
			<div class="delete-container">
				<button id="delete-place">x</button>
			</div>
		</div>
	{{/each}}
</main>

{{> add-place-modal}}
